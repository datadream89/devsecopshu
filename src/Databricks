import com.typesafe.config.{Config, ConfigFactory}

object ConfigParser {
  def main(args: Array[String]): Unit = {
    val configFiles = List("config1.conf", "config2.conf") // Add more file names as needed

    val configs: List[Config] = configFiles.map(file => ConfigFactory.parseResources(file))

    // Define the sections you want to access from the config files
    val sectionsToAccess = List("section1", "section2", "section3", "section4") // Add more section names as needed

    // Access values from each config file and section
    for {
      config <- configs
      section <- sectionsToAccess
    } {
      try {
        val value = config.getString(s"$section.key")
        println(s"[$section] key: $value")
      } catch {
        case _: Exception =>
          println(s"[$section] key not found in ${config.origin().resource()}")
      }
    }
  }
}
