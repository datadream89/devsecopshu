import re

sql_text = "SELECT orders.id, customers.name FROM orders JOIN customers ON orders.customer_id = customers.id"

column_pattern = re.compile(r'\bON\b\s+(.+?(?=\s+WHERE|\s+GROUP BY|\s+ORDER BY|\s+LIMIT|\s+;|$))', re.IGNORECASE)
column_values = []

columns = column_pattern.findall(sql_text)
for column_pair in columns:
    col_pair_split = re.split(r'\s*=\s*', column_pair)
    if len(col_pair_split) == 2:  # Ensure it's a valid column pair with an equal sign
        column_values.extend(col_pair_split)

print(column_values)
